<h2>Éditer le plan du cours « <em><%= @article.title_article %> »</em></h2>

<%= form_for @article, :url => updatesummary_article_path(@article), :html => {:class => "form-horizontal"} do |f| %>
  <% if @article.errors.any? -%>
    <div class="alert alert-error">  
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= @article.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  
  <fieldset>
    <legend></legend>
    
    <div class="control-group">
      <%= f.label :summary, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :summary, :rows => 15, :class => 'textarea-xlarge' %>
        
        <p class="help-block"><strong>Note :</strong> Ce champ doit suivre un schéma bien précis.</p>
      </div>
    </div>
  </fieldset>
  
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <%= link_to "Annuler", articles_path, :class => "btn" %>
  </div>
<% end %>