<div class="btn-group">
  <a class="btn btn-primary" href="<%= new_article_path %>">Créer</a>
  <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><%= link_to "Article", new_article_path %></li>
    <li><a href="#">FAQ</a></li>
    <li class="divider"></li>
    <li><a href="#">Page cours/tutoriels/articles</a></li>
    <li><a href="#">Page outils</a></li>
  </ul>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Titre</th>
      <th>Rubrique</th>
      <th>Options</th>
    </tr>
  </thead>
  
  <tbody>
    <% if @articles.length > 0 %>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td>
          <span class="label label-success">Publié</span>
          <%= link_to article.title_article, article_by_slug_url(article.server_path) %>
        </td>
        <td><%= article.column.try(:title) || "/" %></td>
        <td>
          
<%= render :partial => 'article_options', :locals => {:article => article} %>
          
        </td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4"><em>Pas encore d'articles</em></td>
      </tr>
    <% end %>
  </tbody>
</table>